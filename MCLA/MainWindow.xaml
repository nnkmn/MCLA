<Window x:Class="MCLA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCLA"
        mc:Ignorable="d"
        Title="MCLA" 
        Height="450" 
        Width="800" 
        Icon="Assets/launcher.ico">
    <Grid>
        <TabControl>
            <TabItem Header="主页">
                <Frame NavigationUIVisibility="Hidden" Source="Page/HomePage.xaml"></Frame>
            </TabItem>
            <TabItem Header="下载">
                <Frame NavigationUIVisibility="Hidden" Source="Page/DownloadPage.xaml"></Frame>
            </TabItem>
            <TabItem Header="设置">
                <Frame NavigationUIVisibility="Hidden" Source="Page/SettingsPage.xaml"></Frame>
            </TabItem>
        </TabControl>
    </Grid>
</Window>