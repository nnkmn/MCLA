<Page x:Class="MCLA.page.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MCLA.page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <Grid>
        <StackPanel HorizontalAlignment="Left" Width="150" Margin="20,20,0,20" Grid.ColumnSpan="2">
            <TextBlock  Text="游戏版本" FontSize="16"></TextBlock>
            <ComboBox SelectionChanged ="GameVersions_SelectionChanged" x:Name="GameVersions" Height="30"></ComboBox>
            <TextBlock Text="JAVA版本" FontSize="16"></TextBlock>
            <ComboBox SelectionChanged="JavaPath_SelectionChanged" x:Name="JavaPath" Height="30"></ComboBox>
            <TextBlock Text="登录方式" FontSize="16"></TextBlock>
            <ComboBox SelectionChanged="LoginMode_SelectionChanged" x:Name="LoginMode" Height="30">
                <ComboBoxItem Content="离线登录" ></ComboBoxItem>
                <ComboBoxItem Content="微软登录" ></ComboBoxItem>
            </ComboBox>
            <TextBlock Text="游戏名称" x:Name="PlayerNameText" FontSize="16"></TextBlock>
            <TextBox TextChanged="PlayerName_TextChanged" x:Name="PlayerName" Height="30"></TextBox>
        </StackPanel>
    </Grid>
</Page>
