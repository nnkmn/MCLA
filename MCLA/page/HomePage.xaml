<Page x:Class="MCLA.page.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MCLA.page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid>
        <!-- 启动按钮，设置居中对齐 -->
        <Button Content="启动游戏" FontSize="22" Click="Button_click" Width="150" Height="60"
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,30,20"/>

        <!-- 显示进度的 TextBlock -->
        <TextBlock x:Name="Progress" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="800"
                   Margin="0,0,30,90" FontSize="16" TextWrapping="Wrap" Text="启动进度..."/>
    </Grid>
</Page>
